<div class="container">
  <div class="row">
  	<div class="col-md-4">
  		<h1>
    		<%= @course.title %>
  		</h1>
      <p>
        <%= image_tag @course.avatar_url(:thumb) if @course.avatar? %>

        Описание:
        <%= @course.short_description %>

      </p>
  	</div>
  	<div class="col-md-4">
    	<h3>Все уроки (<%= @course.lessons.count %>)</h3>
      <% if @course.lessons.any? %>
        <ol class="lessons">
          <%@course.lessons.each do |lesson|%>
            <li id="lesson-<%= lesson.id %>">
              <span class="title"><strong><%= lesson.title %></strong></span>

              <%if @course.registered?(current_user.id, @course.id)||@course.teacher_id == current_user.id%>
                <span><%=link_to "Открыть", lesson %></span>
              <%end%>
              
              <%if current_user.owner?(@course)%>
                <span><%= link_to "Удалить",lesson, method: :delete, data: { confirm: 'Вы уверены?' } %></span>
                <span class="timestamp">
                  Created <%= time_ago_in_words(lesson.created_at) %> ago.
                </span>
              <%end%>
            </li>
          <%end%> 
        </ol>
	    <% end %>
  	</div>
    <div class="col-md-4">
      <h3>Студенты (<%=@students.count%>)</h3>
      <ol>
      <%@students.each do |student|%>
        <li><%=student.name%></li>
      <%end%>
      </ol>
    </div>
  </div>
  <div class="actions">
    <%if current_user.admin?%>
      <%= link_to "Регистрация студентов", controller: "courses", action: "add_students", course_id: @course.id%> | 
    <%end%>
    <%= link_to 'Назад', courses_path %>

    <%if current_user.owner?(@course)%>
      <%= link_to "Редактировать", edit_course_path%>
      <%= link_to "Добавить урок", controller: "lessons", action: "new"%>
    <%end%>
  </div>
</div>
