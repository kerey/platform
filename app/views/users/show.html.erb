<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
      	<%= gravatar_for @user %>
        <%= @user.name %>
    	<%if @user.admin?%>
    		admin
    	<%end%>
    	<%if @user.teacher?%>
    		teacher
    	<%end%>
    	<%if @user.student?%>
    		student
    	<%end%>
      </h1>
    </section>
  </aside>
</div>