<%= form_for @homework do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  
  <div id = "homeworkSet">
    <div class="field">
      <%= f.label "Название" %>
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <%= f.label "Описание" %>
      <%= f.text_area :short_description %>
    </div>
    <div class="field">
      <%= f.label "Максимум балл" %>
      <%= f.text_area :points %>
    </div>
  </div>
  
  <div class="actions">
    <%= f.submit "Добавить", class: "btn btn-success" %>
  </div>
<% end %>

